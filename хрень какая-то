using System;

    
    public interface IMath
    {
        void Summary(double a, double b);
        void Substraction(double a, double b);
        void Multiplication(double a, double b);
        void Division(double a, double b);
    }
    class Methods : IMath
    {
        public void Summary(double a, double b)
        {
            double c= a+b;
            Console.WriteLine(c);
        }
        public void Substraction(double a, double b)
        {
            double c= a-b;
            Console.WriteLine(c);
        }
        public void Multiplication(double a, double b)
        {
            double c= a*b;
            Console.WriteLine(c);
        }
        public void Division(double a, double b)
        {
            double c= a*(Math.Pow(b,-1));
            Console.WriteLine(c);
        }
    }
    delegate double Peremennaya();
    class DelegateTest
    {
        static double Read()
        {
            double a= Convert.ToDouble(Console.ReadLine());
            return a;
        }
    }
class Program
{
    static void Main()
    {
        Console.WriteLine ("Menu");
        Console.WriteLine ("1. Сложение");
        Console.WriteLine ("2. Вычитание");
        Console.WriteLine ("3. Умножение");
        Console.WriteLine ("4. Деление");
        int choose= Convert.ToInt32(Console.ReadLine());
        Peremennaya a= Read;
        Peremennaya b= Read;
        a();
        b();
        
        Read() => Convert.ToInt23(Console.ReadLine());
        
        switch (choose)
        {
            case 1: Console.WriteLine(IMath.Summary(a,b));
            case 2: Console.WriteLine(IMath.Substraction(a,b));
            case 3: Console.WriteLine(IMath.Multiplication(a,b));
            case 4: Console.WriteLine(IMath.Division(a,b));
            
        }
    }
}
